{
  "manifest_version": 3,
  "name": "WAutoSend",
  "version": "1.1.2",
  "description": "Automated WhatsApp Web message scheduler with clean UI and reliable delivery",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["storage.js", "scheduler.js", "ui.js", "content.js", "debug.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/icon-16.png",
        "icons/icon-24.png",
        "icons/icon-32.png",
        "icons/icon-38.png",
        "icons/icon-48.png",
        "icons/icon-128.png"
      ],
      "matches": ["https://web.whatsapp.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "WAutoSend - Message Scheduler",
    "default_icon": {
      "16": "icons/icon-16.png",
      "24": "icons/icon-24.png",
      "32": "icons/icon-32.png",
      "38": "icons/icon-38.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  }
}
